@page
@model MiniAccounts.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for @Model.UserEmail</h2>

<form method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Roles[@i].IsSelected" />
                <input type="hidden" asp-for="Roles[@i].RoleName" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Update Roles</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to Users</a>
</form>