@page
@model MiniAccounts.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@user.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>